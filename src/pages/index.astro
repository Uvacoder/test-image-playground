---
import { Icon } from "astro-icon";
import "@fontsource/inter/variable.css";
import Playground from "../components/Playground";
---

<!DOCTYPE html>
<html lang="en" class="w-full h-full">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Binarization playground</title>
  </head>
  <body class="bg-white flex flex-col w-full h-full">
    <main class="grow w-full flex flex-col items-center">
      <Playground client:idle />
    </main>
    <footer
      class="p-8 w-full border-t border-zinc-700 text-center shrink-1 flex justify-between items-center text-zinc-400 bg-zinc-800 gap-2"
    >
      <p class="text-left">
        Made with ❤️ at <a
          href="https://www.uvm.edu/"
          rel="nofollow"
          class="hover:underline font-semibold underline-offset-2 decoration-wavy decoration-emerald-400 text-emerald-400"
          >UVM</a
        > by
        <a
          href="https://blog.uvm.edu/lsf/the-mechanical-dielectric-and-optical-properties-of-nanocomposites/"
          class="hover:underline font-semibold underline-offset-2 decoration-wavy decoration-indigo-400 text-indigo-400"
          >Dr. Schadler's Lab</a
        >
      </p>
      <a
        class="hover:text-zinc-300 flex gap-2"
        href="https://github.com/kevinzunigacuellar/binarization-playground"
      >
        <Icon name="github" class="w-6 fill-current" />GitHub</a
      >
    </footer>
  </body>
  <script is:inline src="doxaWasm.js"></script>
  <script is:inline src="doxa.js"></script>
  <script>
    import { setStore } from "../components/store.js";
    // load WASM
    (() => {
      // @ts-ignore
      setStore("doxa", Doxa);
    })();
  </script>
</html>
